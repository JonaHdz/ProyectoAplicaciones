<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.PrincipalTabMenuActivity"
         android:tag="layout/activity_principal_tab_menu_activity_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Blue"
            app:tabIconTint="@color/white"
            app:tabIndicatorColor="@color/Green"
            app:tabTextColor="@color/white">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icon_product"
                android:text="@string/Menu" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icon_cart"
                android:text="@string/Cart" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icon_record"
                android:text="@string/Record" />
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>
         