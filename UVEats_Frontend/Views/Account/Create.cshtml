@model UserModel

@{
  Layout = "_Layout";
  ViewData["Title"] = "Registro de Cliente";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Home/index.css" />
}

<div
  class="container d-flex justify-content-center align-items-center text-center py-4 rounded-9 shadow-6 form-login-container">
  <div class="subcontainer px-5">
    <h2 class="my-4 text-dark fs-2 display-6">Registro de Cliente</h2>
    @using (Html.BeginForm("Create", "Account", FormMethod.Post, new { id = "form-create-user", enctype = "multipart/form-data", @class = "needs-validation", novalidate = "novalidate" }))
    {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      <div class="d-flex">
        <i class="d-flex align-items-center fas fa-user me-2 icon-input"></i>
        <div class="form-outline">
          @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control form-control-lg", autocomplete = "off", required = "required", id = "input-name" })
          <label class="form-label" for="input-name">Nombre<span class="text-danger">*</span></label>
        </div>
      </div>
      @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "d-flex text-start text-danger mb-2" })
      <div class="d-flex">
        <i class="d-flex align-items-center fas fa-address-card me-2 icon-input"></i>
        <div class="form-outline">
          @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control form-control-lg", autocomplete = "off", required = "required", id = "input-lastname" })
          <label class="form-label" for="input-lastname">Apellido<span class="text-danger">*</span></label>
        </div>
      </div>
      @Html.ValidationMessageFor(model => model.Apellido, null, new { @class = "d-flex text-start text-danger mb-2" })      
      <div class="d-flex">
        <i class="d-flex align-items-center fas fa-phone me-2 icon-input"></i>
        <div class="form-outline">
          @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control form-control-lg", autocomplete = "off", required = "required", id = "input-phone"})
          <label class="form-label" for="input-phone">Teléfono<span class="text-danger">*</span></label>
        </div>
      </div>
      @Html.ValidationMessageFor(model => model.Telefono, null, new { @class = "d-flex text-start text-danger mb-2" })
      <div class="d-flex">
        <i class="d-flex align-items-center fas fa-envelope me-2 icon-input"></i>
        <div class="form-outline">
          @Html.TextBoxFor(model => model.Correo, new { @class = "form-control form-control-lg", autocomplete = "off", required = "required", id = "input-email"})
          <label class="form-label" for="input-email">Correo electrónico<span class="text-danger">*</span></label>
        </div>
      </div>
      @Html.ValidationMessageFor(model => model.Correo, null, new { @class = "d-flex text-start text-danger mb-2" })
      <div class="d-flex">
        <i class="d-flex align-items-center fas fa-key me-2 icon-input"></i>
        <div class="form-outline">
          @Html.PasswordFor(model => model.Contrasena, new { @class = "form-control form-control-lg", autocomplete = "off", required = "required", id = "input-password"})
          <label class="form-label" for="input-password">Contraseña<span class="text-danger">*</span></label>
        </div>
      </div>
      @Html.ValidationMessageFor(model => model.Contrasena, null, new { @class = "d-flex text-start text-danger mb-2" })
      @* <div>
        <label class="form-label" for="input-image">Foto de perfil</label>
        <input type="file" class="form-control" id="input-image" />
      </div> *@
      
      <div class="d-flex gap-3 justify-content-end mt-4">
        <a role="button" class="btn btn-secondary"  href="@Url.Action("Index", "Home")">Cancelar</a>
        <button type="submit" class="btn btn-primary">Continuar</button>
      </div>
    }    
  </div>
</div>

@section Scripts {
    <script src="~/js/Home/index.js"></script>
}